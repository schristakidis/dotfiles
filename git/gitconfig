[alias]
	co = checkout
	br = branch
	ci = commit
	st = status
	unstage = reset HEAD --
	last = log -1 HEAD
	stash-unapply = !git stash show -p | git apply -R
	ctags = !.git/hooks/ctags
	tree = log --graph --decorate --pretty=oneline --abbrev-commit
