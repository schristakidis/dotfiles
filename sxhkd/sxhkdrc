# Basic binds
super + Return
	$TERMINAL
super + d
	rofi_run
super + f
	firefox
super + n
    nautilus


alt + ctrl + BackSpace
    rofi_run -l
alt + ctrl + l
    i3lock-script now


control + shift + l
    xkblayout-state set +1


XF86PowerOff
	dprompt "Shutdown computer?" "sudo -A shutdown -h now"
XF86AudioRaiseVolume
    volumectl up 5
XF86AudioLowerVolume
    volumectl down 5
XF86AudioMute
    volumectl mute

alt + Up
    volumectl up 5

alt + Down
    volumectl down 5


