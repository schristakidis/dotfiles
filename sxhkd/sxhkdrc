# Basic binds
super + Return
	$TERMINAL
super + d
	rofi -show drun
super + f
	firefox
super + n
    nautilus


# super + shift + x
# 	dprompt "Shutdown computer?" "sudo -A shutdown -h now"
# super + shift + r
#     dprompt "Restart computer?" "sudo -A shutdown -r now"
super + shift + BackSpace
    i3reboot
alt + shift + l
    i3lock-script now


control + shift + l
    xkblayout-state set +1


XF86PowerOff
	dprompt "Shutdown computer?" "sudo -A shutdown -h now"
XF86AudioRaiseVolume
    volumectl up 5
XF86AudioLowerVolume
    volumectl down 5
XF86AudioMute
    volumectl mute

alt + Up
    volumectl up 5

alt + Down
    volumectl down 5


