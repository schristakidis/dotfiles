{
    "layer": "top",
    "position": "top",
    "mod": "dock",
    "exclusive": true,
    "passthrough": false,
    "gtk-layer-shell": true,
    "height": 20,
    "modules-left": [
        "custom/menu",
        "hyprland/workspaces",
        "hyprland/window"
    ],
    "modules-right": [
        "custom/weather",
        "custom/wlsunset",
        "custom/playerctl",
        "idle_inhibitor",
        "custom/dnd",
        "custom/clipboard",
        "cpu",
        "memory",
        // "disk",
        "temperature",
        // "custom/power_profile",
        "battery",
        "pulseaudio",
        "pulseaudio#microphone",
        "backlight",
        "tray",
        "custom/updates",
        "clock",
        "custom/power"
    ],
    "include": [
        "~/.dotfiles/tmp/workspaces.jsonc"
    ],
    "custom/menu": {
        "format": "ÔåÉ",
        "on-click": "exec nwg-drawer",
        "tooltip": false
    },
    "custom/launch_wofi": {
        "format": "ÔåÉ",
        "on-click": "pkill wofi || wofi -n",
        "tooltip": false
    },
    "custom/dnd": {
        "interval": "once",
        "return-type": "json",
        "format": "{}{icon}",
        "format-icons": {
            "default": "ÔÅµ",
            "dnd": "Ôí≥"
        },
        "on-click": "dunstctl set-paused toggle; pkill -RTMIN+11 waybar",
        "exec": "printf '{\"alt\":\"%s\",\"tooltip\":\"DND mode: %s\"}' $(dunstctl is-paused | grep -q 'true' && echo dnd || echo default) $(dunstctl is-paused)",
        "signal": 11
    },
    "custom/playerctl": {
        "interval": "once",
        "tooltip": true,
        "return-type": "json",
        "format": "{icon}",
        "format-icons": {
            "Playing": "ÔÅã",
            "Paused": "ÔÅå"
        },
        "exec": "playerctl metadata --format '{\"alt\": \"{{status}}\", \"tooltip\": \"{{playerName}}:  {{markup_escape(title)}} - {{markup_escape(artist)}}\" }'",
        "on-click": "playerctl play-pause; pkill -RTMIN+5 waybar",
        "on-click-right": "playerctl next; pkill -RTMIN+5 waybar",
        "on-scroll-up": "playerctl position 10+; pkill -RTMIN+5 waybar",
        "on-scroll-down": "playerctl position 10-; pkill -RTMIN+5 waybar",
        "signal": 5
    },
    "custom/power_btn": {
        "format": "ÔÄë",
        "on-click": "sh -c '(sleep 0.5s; wlogout --protocol layer-shell)' & disown",
        "tooltip": false
    },
    "custom/power": {
        "format": "ÔÄë",
        "on-click": "bar_path=$HOME nwg-bar -x"
    },
    "custom/lock_screen": {
        "format": "ÔÄ£",
        "on-click": "sh -c '(sleep 0.5s; swaylock)' & disown",
        "tooltip": false
    },
    "custom/clipboard": {
        "format": "ÔÄ∫",
        "interval": "once",
        "return-type": "json",
        "on-click": "hyprctl dispatch exec ~/.bin/clipmenu; pkill -RTMIN+9 waybar",
        "on-click-right": "hyprctl dispatch -- exec ~/.bin/clipmenu --delete; pkill -RTMIN+9 waybar",
        "on-click-middle": "rm -f ~/.cache/cliphist/db; pkill -RTMIN+9 waybar",
        "exec": "printf '{\"tooltip\":\"%s\"}' $(cliphist list | wc -l)' item(s) in the clipboard\r(Mid click to clear)'",
        "exec-if": "[ -x \"$(command -v cliphist)\" ] && [ $(cliphist list | wc -l) -gt 0 ]",
        "signal": 9
    },
    "cpu": {
        "interval": 10,
        "format": "Ôãõ {usage}%",
        "max-length": 10,
        "states": {
            "warning": 70,
            "critical": 90
        },
        "on-click": "alacritty -o 'window.startup_mode=\"Fullscreen\"' --title btop -e btop"
    },
    "memory": {
        "interval": 30,
        "format": "Ôî∏ {}%",
        "states": {
            "warning": 70,
            "critical": 90
        },
        "tooltip": true,
        "tooltip-format": "Memory - {used:0.1f}GB used",
        "on-click": "alacritty -o 'window.startup_mode=\"Fullscreen\"' --title btop -e btop"
    },
    "disk": {
        "interval": 30,
        "format": "Û∞ãä",
        "path": "/",
        "format-alt-click": "click-right",
        "format-alt": "Û∞ãä {percentage_used}%",
        "tooltip": true,
        "tooltip-format": "HDD - {used} used out of {total} on {path} ({percentage_used}%)",
        "on-click": "kitty --start-as=fullscreen --title btop sh -c 'btop'"
    },
    "battery": {
        "states": {
            "good": 95,
            "warning": 30,
            "critical": 10
        },
        "format": "{icon}",
        "format-charging": "Ôá¶ {capacity}%",
        "format-plugged": "Ôá¶ {capacity}%",
        "format-alt-click": "click-right",
        "format-alt": "{icon} {capacity}%",
        "format-icons": [
            "Û∞Çé",
            "Û∞Å∫",
            "Û∞Åª",
            "Û∞Åº",
            "Û∞ÅΩ",
            "Û∞Åæ",
            "Û∞Åø",
            "Û∞ÇÄ",
            "Û∞ÇÅ",
            "Û∞ÇÇ",
            "Û∞Åπ"
        ]
    },
    "pulseaudio": {
        "format": "{icon}",
        "format-muted": "Ôë¶",
        "on-click": "~/.bin/hypr_mixer",
        "on-click-middle": "~/.bin/sway_volume --toggle",
        "on-click-right": "swaymsg exec pavucontrol",
        "on-scroll-up": "~/.bin/sway_volume --inc",
        "on-scroll-down": "~/.bin/sway_volume --dec",
        "scroll-step": 5,
        "format-icons": {
            "headphone": "ÔÄ•",
            "hands-free": "ÔÄ•",
            "headset": "ÔÄ•",
            "phone": "ÔÇï",
            "portable": "ÔÇï",
            "car": "ÔÜπ",
            "default": [
                "ÔÄ¶",
                "ÔÄß",
                "ÔÄ®"
            ]
        },
        "tooltip": true,
        "tooltip-format": "{icon} at {volume}%"
    },
    "pulseaudio#microphone": {
        "format": "{format_source}",
        "format-source": "ÔÑ∞",
        "format-source-muted": "ÔÑ±",
        "on-click": "~/.bin/sway_volume --toggle-mic",
        "on-click-right": "pavucontrol",
        "on-scroll-up": "~/.bin/sway_volume --mic-inc",
        "on-scroll-down": "~/.bin/sway_volume --mic-dec",
        "scroll-step": 5,
        "tooltip": true,
        "tooltip-format": "ÔÑ∞ at {volume}%"
    },
    "backlight": {
        "device": "intel_backlight",
        "format": "{icon}",
        "format-alt-click": "click-right",
        "format-alt": "{icon} {percent}%",
        "format-icons": [
            "Û∞Éû",
            "Û∞Éü",
            "Û∞É†"
        ],
        "on-scroll-up": "~/.bin/brightness.sh --inc",
        "on-scroll-down": "~/.bin/brightness.sh --dec"
    },
    "tray": {
        "icon-size": 16,
        "spacing": 10
    },
    "custom/updates": {
        "format": "{}",
        "exec": "~/.bin/update-sys",
        "on-click": "~/.bin/update-sys update",
        "interval": 300,
        "tooltip": true
    },
    "clock": {
        "format": "{:%H:%M}",
        "tooltip-format": "{:ÔÅ≥ %A, %e %B %Y}",
        "format-alt-click": "click-right",
        "format-alt": "{:%e %b %H:%M}",
        "tooltip": true,
        "on-click": "~/.bin/hypr_cal"
    },
    "custom/wlsunset": {
        "interval": "once",
        "tooltip": true,
        "tooltip-format": "{tooltip}",
        "return-type": "json",
        "format": "{icon}",
        "format-icons": {
            "on": "ÔÜÜ",
            "off": "ÔÜÖ"
        },
        "exec": "location=off ~/.bin/sunset.sh",
        "on-click": "~/.bin/sunset.sh toggle; pkill -RTMIN+6 waybar",
        "exec-if": "~/.bin/sunset.sh  check",
        "signal": 6
    },
    "custom/weather": {
        "icon-size": 42,
        "format": "{icon} {}",
        "tooltip": true,
        "interval": 3600,
        "exec": "~/.bin/weather.py",
        "return-type": "json",
        "format-icons": {
            "Unknown": "‚ú®",
            "Cloudy": "ÔÉÇ",
            "Fog": "üå´",
            "HeavyRain": "üåß",
            "HeavyShowers": "üåß",
            "HeavySnow": "‚ùÑÔ∏è",
            "HeavySnowShowers": "‚ùÑÔ∏è",
            "LightRain": "üå¶",
            "LightShowers": "üå¶",
            "LightSleet": "üåß",
            "LightSleetShowers": "üåß",
            "LightSnow": "üå®",
            "LightSnowShowers": "üå®",
            "PartlyCloudy": "‚õÖÔ∏è",
            "Sunny": "‚òÄÔ∏è",
            "ThunderyHeavyRain": "üå©",
            "ThunderyShowers": "‚õà",
            "ThunderySnowShowers": "‚õà",
            "VeryCloudy": "ÔÉÇ"
        }
    },
    "temperature": {
        "thermal-zone": 1,
        "format": "Ôãâ",
        "format-alt-click": "click-right",
        "format-alt": "Ôãâ {temperatureC}¬∞C",
        "critical-threshold": 70,
        "hwmon-path":  "/sys/devices/virtual/thermal/thermal_zone0/hwmon1/temp1_input",
        "format-critical": "Ôãá {temperatureC}¬∞C",
        "on-click": "kitty --start-as=fullscreen --title btop sh -c 'btop'"
    },
    "idle_inhibitor": {
        "format": "{icon}",
        "format-icons": {
            "activated": "Û∞õê ",
            "deactivated": "Û∞õë "
        },
        "tooltip": true
    }
}
