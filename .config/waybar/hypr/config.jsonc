{
    "layer": "top",
    "position": "top",
    "mod": "dock",
    "exclusive": true,
    "passthrough": false,
    "gtk-layer-shell": true,
    "height": 20,
    "modules-left": [
        "custom/launch_wofi",
        "hyprland/workspaces"
    ],
    "modules-right": [
        "cpu",
        "memory",
        "disk",
        "temperature",
        // "custom/power_profile",
        "battery",
        "pulseaudio",
        "pulseaudio#microphone",
        "backlight",
        "tray",
        // "custom/weather",
        "custom/updates",
        "idle_inhibitor",
        "clock",
        "custom/lock_screen",
        "custom/power_btn"
    ],
    "include": [
        "~/.dotfiles/tmp/workspaces.jsonc"
    ],
    "custom/launch_wofi": {
        "format": "ÔåÉ",
        "on-click": "pkill wofi || wofi -n",
        "tooltip": false
    },
    "custom/power_btn": {
        "format": "ÔÄë",
        "on-click": "sh -c '(sleep 0.5s; wlogout --protocol layer-shell)' & disown",
        "tooltip": false
    },
    "custom/lock_screen": {
        "format": "ÔÄ£",
        "on-click": "sh -c '(sleep 0.5s; swaylock)' & disown",
        "tooltip": false
    },
    "cpu": {
        "interval": 10,
        "format": "Ôãõ",
        "max-length": 10,
        "format-alt-click": "click-right",
        "format-alt": "Ôãõ {usage}%",
        "on-click": "kitty --start-as=fullscreen --title btop sh -c 'btop'"
    },
    "memory": {
        "interval": 30,
        "format": "ÔÉâ",
        "format-alt-click": "click-right",
        "format-alt": "ÔÉâ {}%",
        "max-length": 10,
        "tooltip": true,
        "tooltip-format": "Memory - {used:0.1f}GB used",
        "on-click": "kitty --start-as=fullscreen --title btop sh -c 'btop'"
    },
    "disk": {
        "interval": 30,
        "format": "Û∞ãä",
        "path": "/",
        "format-alt-click": "click-right",
        "format-alt": "Û∞ãä {percentage_used}%",
        "tooltip": true,
        "tooltip-format": "HDD - {used} used out of {total} on {path} ({percentage_used}%)",
        "on-click": "kitty --start-as=fullscreen --title btop sh -c 'btop'"
    },
    "battery": {
        "states": {
            "good": 95,
            "warning": 30,
            "critical": 10
        },
        "format": "{icon}",
        "format-charging": "Ôá¶ {capacity}%",
        "format-plugged": "Ôá¶ {capacity}%",
        "format-alt-click": "click-right",
        "format-alt": "{icon} {capacity}%",
        "format-icons": [
            "Û∞Çé",
            "Û∞Å∫",
            "Û∞Åª",
            "Û∞Åº",
            "Û∞ÅΩ",
            "Û∞Åæ",
            "Û∞Åø",
            "Û∞ÇÄ",
            "Û∞ÇÅ",
            "Û∞ÇÇ",
            "Û∞Åπ"
        ]
    },
    "pulseaudio": {
        "format": "{icon}",
        "format-muted": "Ôë¶",
        "on-click": "~/.bin/sway_volume --toggle",
        "on-click-right": "~/.bin/hypr_mixer",
        "on-scroll-up": "~/.bin/sway_volume --inc",
        "on-scroll-down": "~/.bin/sway_volume --dec",
        "scroll-step": 5,
        "format-icons": {
            "headphone": "ÔÄ•",
            "hands-free": "ÔÄ•",
            "headset": "ÔÄ•",
            "phone": "ÔÇï",
            "portable": "ÔÇï",
            "car": "ÔÜπ",
            "default": [
                "ÔÄ¶",
                "ÔÄß",
                "ÔÄ®"
            ]
        },
        "tooltip": true,
        "tooltip-format": "{icon} at {volume}%"
    },
    "pulseaudio#microphone": {
        "format": "{format_source}",
        "format-source": "ÔÑ∞",
        "format-source-muted": "ÔÑ±",
        "on-click": "~/.bin/sway_volume --toggle-mic",
        "on-click-right": "pavucontrol",
        "on-scroll-up": "~/.bin/sway_volume --mic-inc",
        "on-scroll-down": "~/.bin/sway_volume --mic-dec",
        "scroll-step": 5,
        "tooltip": true,
        "tooltip-format": "ÔÑ∞ at {volume}%"
    },
    "backlight": {
        "device": "intel_backlight",
        "format": "{icon}",
        "format-alt-click": "click-right",
        "format-alt": "{icon} {percent}%",
        "format-icons": [
            "Û∞Éû",
