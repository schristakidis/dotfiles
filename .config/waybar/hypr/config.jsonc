        "on-scroll-down": "~/.bin/brightness.sh --dec"
    },
    "tray": {
        "icon-size": 16,
        "spacing": 10
    },
    "custom/updates": {
        "format": "{}",
        "exec": "~/.bin/update-sys",
        "on-click": "~/.bin/update-sys update",
        "interval": 300,
        "tooltip": true
    },
    "clock": {
        "format": "{:%H:%M}",
        "tooltip-format": "{:ÔÅ≥ %A, %e %B %Y}"
