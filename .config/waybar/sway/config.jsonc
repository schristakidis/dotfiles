{
    "layer": "top",
    "position": "top",
    "height": 30,
    "modules-left": [
        "custom/menu",
        "sway/workspaces",
        "sway/window"
    ],
    "modules-center": [
        "custom/wf-recorder",
        "sway/mode"
    ],
    "modules-right": [
        "custom/weather",
        "custom/wlsunset",
        "custom/playerctl",
        // "custom/scratchpad",
        "idle_inhibitor",
        "custom/dnd",
        "sway/language",
        "custom/clipboard",
        "cpu",
        "memory",
        // "temperature",
        // "backlight",
        "battery",
        // "network",
        // "bluetooth",
        "pulseaudio",
        "pulseaudio#microphone",
        "clock",
        "tray",
        "custom/power"
    ],
    "include": [
        "~/.dotfiles/tmp/workspaces.jsonc"
    ],
    "sway/language": {
        "format": "ÔÑú {}",
        "min-length": 5,
        "tooltip": false,
        "on-click": "swaymsg input $(swaymsg -t get_inputs --raw | jq '[.[] | select(.type == \"keyboard\")][0] | .identifier') xkb_switch_layout next"
    },
    "custom/clipboard": {
        "format": "ÔÄ∫",
        "interval": "once",
        "return-type": "json",
        "on-click": "swaymsg -q exec ~/.bin/clipmenu; pkill -RTMIN+9 waybar",
        "on-click-right": "swaymsg -q \"exec ~/.bin/clipmenu --delete\"; pkill -RTMIN+9 waybar",
        "on-click-middle": "rm -f ~/.cache/cliphist/db; pkill -RTMIN+9 waybar",
        "exec": "printf '{\"tooltip\":\"%s\"}' $(cliphist list | wc -l)' item(s) in the clipboard\r(Mid click to clear)'",
        "exec-if": "[ -x \"$(command -v cliphist)\" ] && [ $(cliphist list | wc -l) -gt 0 ]",
        "signal": 9
    },
    "custom/menu": {
        "format": "ÔÑµ",
        "on-click": "exec nwg-drawer",
        "tooltip": false
    },
    "sway/mode": {
        "format": "<span style=\"italic\">{}</span>",
        "tooltip": false
    },
    "sway/window": {
        "format": "{}",
        "max-length": 50,
        "tooltip": true
    },
    "idle_inhibitor": {
        "format": "{icon}",
        "format-icons": {
            "activated": "ÔÅÆ",
            "deactivated": "ÔÅ∞"
        }
    },
    "pulseaudio": {
        "format": "{icon}  {volume}%",
        "format-muted": "Ôë¶",
        "scroll-step": 5,
        "format-icons": {
            "headphone": "ÔÄ•",
            "hands-free": "ÔÄ•",
            "headset": "ÔÄ•",
            "phone": "ÔÇï",
            "portable": "ÔÇï",
            "car": "ÔÜπ",
            "default": [
                "ÔÄ¶",
                "ÔÄß",
                "ÔÄ®"
            ]
        },
        "tooltip-format": "{icon} ‚Ää{volume}% ",

        "on-click": "~/.bin/swaymixer",
        "on-click-middle": "~/.bin/sway_volume --toggle",
        "on-click-right": "swaymsg exec pavucontrol",
        "on-scroll-up": "~/.bin/sway_volume --inc",
        "on-scroll-down": "~/.bin/sway_volume --dec"
    },
    "pulseaudio#microphone": {
        "format": "{format_source} ",
        "format-source": "ÔÑ∞",
        "format-source-muted": "ÔÑ±",
        "on-click": "~/.bin/sway_volume --toggle-mic",
        "on-click-right": "swaymsg exec pavucontrol",
        "on-scroll-up": "~/.bin/sway_volume --mic-inc",
        "on-scroll-down": "~/.bin/sway_volume --mic-dec",
        "scroll-step": 5,
        "tooltip": true,
        "tooltip-format": "ÔÑ∞ at {volume}%"
    },
    "temperature": {
        "thermal-zone": 1,
        "format": "Ôãâ",
        "format-alt-click": "click-right",
        "format-alt": "Ôãâ {temperatureC}¬∞C",
        "critical-threshold": 70,
        "hwmon-path":  "/sys/devices/virtual/thermal/thermal_zone5/hwmon4/temp1_input",
        "format-critical": "Ôãá {temperatureC}¬∞C",
        "on-click": "foot --fullscreen --title btop sh -c 'btop'"
    },
    "backlight": {
        "device": "intel_backlight",
        "format": "{icon}",
        "format-alt-click": "click-right",
        "format-alt": "{icon} {percent}%",
        "format-icons": [
            "Û∞Éû",
            "Û∞Éü",
            "Û∞É†"
        ],
        "on-scroll-up": "~/.bin/brightness.sh --inc",
        "on-scroll-down": "~/.bin/brightness.sh --dec"
    },
    "battery": {
        "format": "{icon}",
        "format-charging": "Ôá¶ {capacity}%",
        "format-plugged": "Ôá¶ {capacity}%",
        "format-alt-click": "click-right",
        "format-alt": "{icon} {capacity}%",
        "states": {
            "good": 95,
            "warning": 30,
            "critical": 10
        },
        "format-icons": [
            "ÔâÑ",
            "ÔâÉ",
            "ÔâÇ",
            "ÔâÅ",
            "ÔâÄ"
        ]
    },
    "network": {
        "format-wifi": "Ôá´ ({signalStrength}%)",
        "format-ethernet": "Ôûñ",
        "format-disconnected": "ÔÑß",
        "tooltip-format": "{icon} {ifname}: {ipaddr}",
        "tooltip-format-ethernet": "{icon} {ifname}: {ipaddr}",
        "tooltip-format-wifi": "{icon} {ifname} ({essid}): {ipaddr}",
        "tooltip-format-disconnected": "{icon} disconnected",
        "tooltip-format-disabled": "{icon} disabled",
        "on-click": "swaymsg exec \\$flock \\$term_float nmtui connect"
    },
    "bluetooth": {
        "format": "Ôäì",
        "format-disabled": "Ôäì",
        "on-click": "swaymsg exec \\$bluetooth",
        "on-click-right": "rfkill toggle bluetooth",
        "tooltip-format": "{}"
    },
    "clock": {
        "format": "{:%H:%M}",
        "tooltip-format": "{:ÔÅ≥ %A, %e %B %Y}",
        "format-alt-click": "click-right",
        "format-alt": "{:%e %b %H:%M}",
        "tooltip": true,
        "on-click": "swaymsg exec \"alacritty --class floating_cal -e calcurse\""
    },
    "cpu": {
        "interval": 5,
        "format": "Ôãõ {usage}%",
        "states": {
            "warning": 70,
            "critical": 90
        },
        "on-click": "swaymsg exec \"alacritty -o window.startup_mode=Fullscreen --title btop -e btop\""
    },
    "memory": {
        "interval": 30,
        "format": "Ôî∏ {}%",
        "states": {
            "warning": 70,
            "critical": 90
        },
        "on-click": "swaymsg exec \"alacritty -o window.startup_mode=Fullscreen --title btop -e btop\""
    },
    "custom/wf-recorder": {
        "interval": "once",
        "return-type": "json",
        "format": "{}",
        "tooltip-format": "{tooltip}",
        "exec": "echo '{\"class\": \"recording\",\"text\":\"ÔÄΩ\",\"tooltip\":\"press $mod+Esc to stop recording\"}'",
        "exec-if": "pgrep wf-recorder",
        "on-click": "killall -s SIGINT wf-recorder",
        "signal": 8
    },
    "custom/playerctl": {
        "interval": "once",
        "tooltip": true,
        "return-type": "json",
        "format": "{icon}",
        "format-icons": {
            "Playing": "ÔÅã",
            "Paused": "ÔÅå"
        },
        "exec": "playerctl metadata --format '{\"alt\": \"{{status}}\", \"tooltip\": \"{{playerName}}:  {{markup_escape(title)}} - {{markup_escape(artist)}}\" }'",
        "on-click": "playerctl play-pause; pkill -RTMIN+5 waybar",
        "on-click-right": "playerctl next; pkill -RTMIN+5 waybar",
        "on-scroll-up": "playerctl position 10+; pkill -RTMIN+5 waybar",
        "on-scroll-down": "playerctl position 10-; pkill -RTMIN+5 waybar",
        "signal": 5
    },
    "custom/power": {
        "format": "ÔÄë",
        "on-click": "nwg-bar -x"
    },
    "custom/dnd": {
        "interval": "once",
        "return-type": "json",
        "format": "{}{icon}",
        "format-icons": {
            "default": "ÔÅµ",
            "dnd": "Ôí≥"
        },
        "on-click": "dunstctl set-paused toggle; pkill -RTMIN+11 waybar",
        "exec": "printf '{\"alt\":\"%s\",\"tooltip\":\"DND mode: %s\"}' $(dunstctl is-paused | grep -q 'true' && echo dnd || echo default) $(dunstctl is-paused)",
        "signal": 11
    },
    "custom/weather": {
        "icon-size": 42,
        "format": "{icon} {}",
        "tooltip": true,
        "interval": 3600,
        "exec": "~/.bin/weather.py",
        "return-type": "json",
        "format-icons": {
            "Unknown": "‚ú®",
            "Cloudy": "ÔÉÇ",
            "Fog": "üå´",
            "HeavyRain": "üåß",
            "HeavyShowers": "üåß",
            "HeavySnow": "‚ùÑÔ∏è",
            "HeavySnowShowers": "‚ùÑÔ∏è",
            "LightRain": "üå¶",
            "LightShowers": "üå¶",
            "LightSleet": "üåß",
            "LightSleetShowers": "üåß",
            "LightSnow": "üå®",
            "LightSnowShowers": "üå®",
            "PartlyCloudy": "‚õÖÔ∏è",
            "Sunny": "‚òÄÔ∏è",
            "ThunderyHeavyRain": "üå©",
            "ThunderyShowers": "‚õà",
            "ThunderySnowShowers": "‚õà",
            "VeryCloudy": "ÔÉÇ"
        }
    },
    // "custom/scratchpad": {  # causes cpu load
    //     "interval": "once",
    //     "return-type": "json",
    //     "format": "{icon}",
    //     "format-icons": {
    //         "one": "Ôãê",
    //         "many": "Ôãí"
    //     },
    //     "exec": "/bin/bash /usr/share/sway/scripts/scratchpad.sh; pkill -RTMIN+7 waybar",
    //     "on-click": "swaymsg 'scratchpad show'",
    //     "signal": 7
    // },
    "custom/wlsunset": {
        "interval": "once",
        "tooltip": true,
        "tooltip-format": "{tooltip}",
        "return-type": "json",
        "format": "{icon}",
        "format-icons": {
            "on": "ÔÜÜ",
            "off": "ÔÜÖ"
        },
        "exec": "location=off ~/.bin/sunset.sh",
        "on-click": "~/.bin/sunset.sh toggle; pkill -RTMIN+6 waybar",
        "exec-if": "~/.bin/sunset.sh  check",
        "signal": 6
    },
    "tray": {
        "icon-size": 21,
        "spacing": 10
    }
}
