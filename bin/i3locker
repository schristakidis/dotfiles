#!/bin/bash

set -m
# Only exported variables can be used within the timer's command.

# export PRIMARY_DISPLAY="$(xrandr | awk '/ primary/{print $1}')"
export PRIMARY_DISPLAY="$(xrandr | awk '/ connected/{print $1}')"

[ -z /tmp/xidlehook.sock ] && rm -rf ~/tmp/xidlehook.sock
sleep 1

# Run xidlehook
xidlehook \
  --socket /tmp/xidlehook.sock \
  --not-when-fullscreen \
  --not-when-audio \
  --timer normal 600 \
    'xrandr --output "$PRIMARY_DISPLAY" --brightness .5' \
    'xrandr --output "$PRIMARY_DISPLAY" --brightness 1' \
  --timer primary 10 \
    'xrandr --output "$PRIMARY_DISPLAY" --brightness 1; ~/.dotfiles/bin/i3lock-script' \
    '' \
  --timer normal 60 \
    'xset dpms force off' \
    '' &
  # `# Finally, suspend an hour after it locks` \
  # --timer normal 3600 \
  #   'systemctl suspend' \
  #   '' &
