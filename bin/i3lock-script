#!/bin/bash

B='#00000000'  # blank
C='#ffffff22'  # clear ish
D='#ff00ffcc'  # default
T='#ee00eeee'  # text
W='#880000bb'  # wrong
V='#bb00bbbb'  # verifying

i3lock_func () {
    i3lock \
        --insidevercolor=$C   \
        --ringvercolor=$V     \
                              \
        --insidewrongcolor=$C \
        --ringwrongcolor=$W   \
        \
        --insidecolor=$B      \
        --ringcolor=$D        \
        --linecolor=$B        \
        --separatorcolor=$D   \
        \
        --verifcolor=$T        \
        --wrongcolor=$T        \
        --timecolor=$T        \
        --datecolor=$T        \
        --layoutcolor=$T      \
        --keyhlcolor=$W       \
        --bshlcolor=$W        \
        \
        --screen 1            \
        --blur 5              \
        --clock               \
        --indicator           \
        --timestr="%H:%M:%S"  \
        --datestr="%A, %d %b" \
        --keylayout 2         
}

if [ -z "$1" ] 
then
    mode='auto'
else
    mode=$1
fi


case $mode in
    auto)
        i3lock_func
        ;;
    now)
        xidlehook-client --socket /tmp/xidlehook.sock control --action trigger --timer 1 
        ;;
    *) exit
esac
